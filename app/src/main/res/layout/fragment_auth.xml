<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.AuthFragment"
    android:background="@color/rrr"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:src="@drawable/pic"
        tools:ignore="MissingConstraints" />


    <TextView
        android:textSize="23dp"
        android:layout_marginTop="290dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/ooo"
        android:text="Регистрация по номеру"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />


   <EditText
       android:background="@drawable/auth_shape"
       android:drawablePadding="12dp"
       android:padding="12dp"
       android:drawableStart="@drawable/ic_call"
       android:textColorHint="@color/eee"
       android:hint="+996 707 777 777"
       android:layout_marginHorizontal="30dp"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="391dp"
       android:id="@+id/et_num"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       tools:ignore="MissingConstraints" />

    <EditText
        android:background="@drawable/auth_shape"
        android:padding="12dp"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_email"
        android:textColorHint="@color/ooo"
        android:hint="Ваш код"
        android:layout_marginTop="451dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <Button
        android:textColor="@color/white"
        android:backgroundTint="@color/ttt"
        android:background="@drawable/button_shape"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="80dp"
        app:layout_constraintTop_toBottomOf="@id/et_code"
        android:id="@+id/btn_get_code"
        android:text="Получить код"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginTop="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_get_code"
        android:textColor="@color/ttt"
        android:text="Отправить снова"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>